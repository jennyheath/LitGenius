<form class="annotation-form">
  <label>Annotation:
    <input
      type="text"
      name="annotation[body]"
      value="<%= annotation.escape("body") %>">
  </label>

  <input
    type="hidden"
    name="annotation[paper_id]"
    value="<%= paper.id %>">

    <input
      type="hidden"
      name="annotation[start_index]"
      value="<%= startIndex %>">

      <input
        type="hidden"
        name="annotation[end_index]"
        value="<%= endIndex %>">

  <button class="submit">Make Annotation</button>
</form>
