<h3><%= paper.escape('title') %></h3>

<div class="paper-show clearfix row-full-height">
  <div class="col-full-height">
    <pre class="paper-body"><%= paper.formattedBody() %></pre>

    <% if (paper.get('user_id') === CURRENT_USER_ID) { %>
      <button class="delete-paper">Delete Paper</button>
    <% } %>
    <form class="paper-comment-form">
      <input type="text-area"
             name="comment[body]"
             id="comment"
             value="<%= comment.escape('body') %>">

      <input type="hidden" name="comment[commentable_id]" value="<%= paper.id %>">
      <input type="hidden" name="comment[commentable_type]" value="Paper">
      <button class="submit">Comment</button>
    </form>
    <ul class="paper-comment-list"></ul>
  </div>

  <div class="annotation-pane col-full-height"></div>
</div>
